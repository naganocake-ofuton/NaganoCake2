<% provide(:title, "ホーム") %>
<!--<link href="https://fonts.googleapis.com/css?family=M+PLUS+1p" rel="stylesheet">-->
<body class="test">
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class = "sample">
				<!--<img src="assets/61952f5b172dc-ae1f-452f-b6ff-f054178e1ada_m.jpg">-->
				<p>
				  <span class="welcome">Welcome NaganoCake</span><br>
				  このサイトは、ケーキ販売のECサイトになります。<br>
				  会員でない方も商品の閲覧はできますが、<br>
				  購入には会員登録が必要になります。<br>
				</p>
			</div>



			<h2 class="toppage-head">オススメ商品</h2>
			<!-- ランダムに4つ表示されるようになっています -->
			<% @products.first(5). each do |product| %>
			  <% if product.genre.is_valid == true %>
         <div class="product-container">
          <%= link_to product_path(product.id), class: "btn-link", :style=>"color:#0099FF;" do %>
           <div id="img_field" class="product">
        <%= attachment_image_tag(product, :image, size: "180x130", fallback: "no_image.jpg") %>
      </div>
      <p class="products-name">
        <%= product.name %>
      </p>
      <% end %>

    <% if product.is_sale == true %>
      <p>¥<%= product.tax_out_price.to_s(:delimited) %></p>
    <% elsif product.is_sale == false %>
      <p class="soldout">売り切れ中</p>
    <% end %>
  </div>
<% end %>

			<% end %>
			<div class="col-xs-12">
			<%= link_to "もっと見る", products_path, class: "btn-link  pull-right" %>
			</div>
		</div>

	</div>
</div>
</body>
