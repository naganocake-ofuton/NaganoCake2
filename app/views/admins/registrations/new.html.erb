<% provide(:title, "管理者新規登録") %>
<div class="row">
  <div class="col-xs-offset-1 col-xs-11">
    <h2 class="head-line title_h2 text-center">管理者新規登録</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "layouts/error_messages", resource: resource %>
  <div class="field form-group col-xs-9">
    <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-8 form-control-static" %>
  </div>
  <div class="field form-group col-xs-9">
    <%= f.label :"パスワード", class: "col-sm-4 control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-8 form-control-static" %>
  </div>
  <div class="field">
    <%= f.label :"パスワード(確認)", class: "col-sm-4 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "col-sm-8 form-control-static" %>
  </div>
  <div class="actions col-xs-6">
    <%= f.submit "　新規登録　", class: "btn btn-info pull-right btn-lg" %>
  </div>
<% end %>
  </div>
</div>
<%= render "admins/shared/links" %>
